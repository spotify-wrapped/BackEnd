{{! 
	This page will close as soon as it is loaded and pass parent window the auth code if granted by user.
}}

<script>
	window.opener.sessionStorage.setItem('accessToken', '{{{access_token}}}');
	window.opener.sessionStorage.setItem('refreshToken', '{{{refresh_token}}}');
	
	window.onunload = () => {
		window.opener.redirect();
	};

	window.close();
</script>