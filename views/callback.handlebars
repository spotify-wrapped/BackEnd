{{! 
	This page will close as soon as it is loaded and pass parent window the auth code if granted by user.
}}

<script>
	// Store the access and refresh token in local storage so parent window can use
	window.opener.sessionStorage.setItem('access_token', '{{{access_token}}}');
	window.opener.sessionStorage.setItem('refresh_token', '{{{refresh_token}}}');
	
	// Alert parent window that this window closed by calling parent window function
	window.onunload = () => {
		window.opener.popUpClose();
	};

	window.close();
</script>